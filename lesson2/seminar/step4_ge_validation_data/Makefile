.PHONY: install clean repro demo-fail

install:
	pip install -r requirements.txt

repro:
	dvc repro

demo-fail:
	@echo "ðŸš¨ Preparing demo: downloading original data first..."
	dvc repro get_data
	@echo "ðŸš¨ Creating bad data that will fail validation..."
	python src/create_bad_data.py
	@echo "ðŸ“Š Running validation with bad data (should fail)..."
	python src/validate_data.py || echo "âœ… Pipeline failed as expected! Validation caught bad data."
	@echo "ðŸ“‹ Check validation report: reports/validation/index.html"

clean:
	rm -rf data/processed models metrics reports
